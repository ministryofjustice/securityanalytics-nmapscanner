#!/bin/ash

startTime=$(date -u +%FT%TZ)
output=$HOST_TO_SCAN-$startTime-nmap.xml
archive=$HOST_TO_SCAN-$startTime-nmap.xml.tar.gz

echo Performing scan at $startTime

set -x

nmap -oX /var/tmp/$output "$@" $HOST_TO_SCAN
tar -C /var/tmp -czvf $archive $output
aws s3 cp $archive s3://${bucket_name}/${task_name}/